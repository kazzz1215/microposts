<h1>
    <%= gravatar_for @user %>
    <%= @user.name %>
</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
        
            <%= f.label :area %>
            <%= f.text_field :area, readonly: true %>
            
            <br>
            
            <%= f.label :profile %>
            <%= f.text_field :profile, readonly: true %>
        <% end %>
    </div>
</div>

<% if current_user %>
    <h4>
        <%= link_to "Edit profile", edit_user_path(@user) %>
    </h4>
<% end %>