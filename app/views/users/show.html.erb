<h1>
    <%= gravatar_for @user %>
    <%= @user.name %>
</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
        
            <%= f.label :area %>
            <%=@user.area %>
            
            <br>
            
            <%= f.label :profile%>
            <%= @user.profile %>
        <% end %>
    </div>
</div>


<h4>
    <%= link_to "Edit profile", edit_user_path(@user) %>
</h4>